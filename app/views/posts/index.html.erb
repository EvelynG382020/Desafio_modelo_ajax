<p id="notice"><%= notice %></p>
<%= render 'posts/form', post: @post %>
<h1>Posts</h1>

<table id="my_posts">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <%= render 'posts/post', post: post %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
